<%= form_with(model: payment_request) do |form| %>
  <% if payment_request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment_request.errors.count, "error") %> prohibited this payment_request from being saved:</h2>

      <ul>
        <% payment_request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :currency, style: "display: block" %>
    <%= form.select :currency, ['USD', 'EUR'], {}, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class: "btn btn-primary btn-lg" %>
    <%= link_to "Back to payment requests", payment_requests_path, class: "btn btn-outline-primary btn-lg" %>
  </div>
<% end %>
